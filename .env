# ============================================================================
# PINTEREST VIDEO DOWNLOADER BOT - Configuration
# ============================================================================
# Créez ce fichier dans le même dossier que bot.py
# NE PARTAGEZ PAS CE FICHIER (surtout pas le token!)
# ============================================================================

# ----------------------------------------------------------------------------
# 1. CONFIGURATION OBLIGATOIRE DU BOT
# ----------------------------------------------------------------------------

# Token de votre bot Telegram (OBLIGATOIRE)
# Obtenez-le gratuitement auprès de @BotFather sur Telegram
# Format: 1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_TOKEN=8556030809:AAFBaEyWxGOINMdO-7Bz-AvrrsUxCQWIwZI

# ----------------------------------------------------------------------------
# 2. ADMINISTRATEURS DU BOT
# ----------------------------------------------------------------------------

# IDs des administrateurs (séparés par des virgules)
# Pour obtenir votre ID Telegram: envoyez /start à @userinfobot
ADMIN_IDS=123456789,987654321

# Nom du bot (affiché dans les messages)
BOT_NAME=Pinterest Video Downloader

# ----------------------------------------------------------------------------
# 3. CONFIGURATION DES TÉLÉCHARGEMENTS
# ----------------------------------------------------------------------------

# Taille maximale des fichiers (en bytes)
# Telegram limite à 50MB (50 * 1024 * 1024 = 52428800)
MAX_FILE_SIZE=52428800

# Durée maximale des vidéos (en secondes)
MAX_VIDEO_DURATION=600  # 10 minutes

# Qualité par défaut (best, 1080p, 720p, etc.)
DEFAULT_QUALITY=best

# Langue par défaut du bot (fr, en, es, etc.)
DEFAULT_LANGUAGE=fr

# ----------------------------------------------------------------------------
# 4. CONFIGURATION TECHNIQUE
# ----------------------------------------------------------------------------

# Mode debug (True/False)
DEBUG_MODE=False

# Nombre maximum de tentatives de téléchargement
MAX_RETRIES=3

# Timeout des requêtes HTTP (en secondes)
HTTP_TIMEOUT=30

# Utiliser proxy (True/False)
USE_PROXY=False

# ----------------------------------------------------------------------------
# 5. PROXY CONFIGURATION (Optionnel)
# ----------------------------------------------------------------------------

# Exemple de proxy HTTP
# HTTP_PROXY=http://username:password@proxy.server.com:8080

# Exemple de proxy SOCKS5
# SOCKS_PROXY=socks5://username:password@proxy.server.com:1080

# ----------------------------------------------------------------------------
# 6. CONFIGURATION AVANCÉE
# ----------------------------------------------------------------------------

# Activer les logs détaillés (True/False)
ENABLE_DETAILED_LOGS=True

# Nettoyer automatiquement les fichiers temporaires (True/False)
AUTO_CLEANUP=True

# Fréquence de nettoyage (en heures)
CLEANUP_INTERVAL_HOURS=1

# Limite de téléchargements par heure par utilisateur
RATE_LIMIT_PER_HOUR=10

# ----------------------------------------------------------------------------
# 7. CONFIGURATION PINTEREST SPÉCIFIQUE
# ----------------------------------------------------------------------------

# User-Agent personnalisé pour Pinterest
CUSTOM_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Cookies Pinterest (optionnel - pour les vidéos privées)
# PINTEREST_COOKIES=sessionid=abc123; csrftoken=def456

# ----------------------------------------------------------------------------
# 8. CONFIGURATION DE SÉCURITÉ
# ----------------------------------------------------------------------------

# Vérifier les signatures des fichiers (True/False)
VERIFY_FILE_SIGNATURES=True

# Types MIME autorisés (séparés par des virgules)
ALLOWED_MIME_TYPES=video/mp4,video/webm,video/x-matroska

# Liste noire d'URLs (séparées par des virgules)
BLACKLISTED_URLS=malicious.com,bad-site.org

# ----------------------------------------------------------------------------
# 9. CONFIGURATION DES NOTIFICATIONS
# ----------------------------------------------------------------------------

# ID du canal pour les logs (optionnel)
LOG_CHANNEL_ID=-1001234567890

# Notifier les administrateurs en cas d'erreur (True/False)
NOTIFY_ADMINS_ON_ERROR=True

# ----------------------------------------------------------------------------
# 10. CONFIGURATION DE PERFORMANCE
# ----------------------------------------------------------------------------

# Nombre maximum de téléchargements simultanés
MAX_CONCURRENT_DOWNLOADS=3

# Taille du cache (en MB)
CACHE_SIZE_MB=100

# Compression vidéo automatique (True/False)
AUTO_COMPRESS_VIDEOS=True

